<h1>Contact Messages</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>E-mail</th>
			<th>Messages</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		{{#each model as |contact|}}
			<tr>
				<td>{{contact.email}}</td>
				<td>{{contact.message}}</td>
				<td>{{#link-to 'admin.editcontacts' contact.id class="btn btn-success btn-xs"}}Edit{{/link-to}} </td>
				<td><button class="btn btn-danger btn-xs" {{action 'deleteContact' contact}}>Delete</button>			
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>
